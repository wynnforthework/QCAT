# 数据库配置
POSTGRES_PASSWORD=qcat_secure_password_2024
DB_HOST=postgres
DB_PORT=5432
DB_NAME=qcat
DB_USER=qcat_user
DB_PASSWORD=qcat_secure_password_2024

# Redis配置
REDIS_PASSWORD=redis_secure_password_2024
REDIS_HOST=redis
REDIS_PORT=6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# 主密钥配置
MASTER_KEY=your-master-key-for-encryption-change-in-production

# Grafana配置
GRAFANA_PASSWORD=grafana_secure_password_2024

# 监控配置
PROMETHEUS_RETENTION=200h
ALERTMANAGER_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK

# 应用配置
GO_ENV=production
LOG_LEVEL=info
SERVER_PORT=8082

# 安全配置
TLS_ENABLED=true
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# 告警配置
ALERT_EMAIL=admin@qcat.com
ALERT_SLACK_CHANNEL=#qcat-alerts
