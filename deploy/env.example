# QCAT Environment Variables Example
# Copy this file to .env and update the values for your environment

# Application Configuration
QCAT_APP_NAME=QCAT
QCAT_APP_VERSION=1.0.0
QCAT_APP_ENVIRONMENT=production

# Server Configuration
QCAT_SERVER_PORT=8082
QCAT_SERVER_READ_TIMEOUT=30s
QCAT_SERVER_WRITE_TIMEOUT=30s

# Database Configuration
QCAT_DATABASE_HOST=localhost
QCAT_DATABASE_PORT=5432
QCAT_DATABASE_USER=postgres
# Use encrypted password: ENC:encrypted_value_here
QCAT_DATABASE_PASSWORD=ENC:your_encrypted_password_here
QCAT_DATABASE_NAME=qcat
QCAT_DATABASE_SSL_MODE=disable

# Redis Configuration
QCAT_REDIS_ADDR=localhost:6379
# Use encrypted password: ENC:encrypted_value_here
QCAT_REDIS_PASSWORD=ENC:your_encrypted_password_here
QCAT_REDIS_DB=0

# JWT Configuration
# Use encrypted secret key: ENC:encrypted_value_here
QCAT_JWT_SECRET_KEY=ENC:your_encrypted_jwt_secret_here
QCAT_JWT_DURATION=24h

# Security Configuration
# Use encrypted master keys: ENC:encrypted_value_here
QCAT_SECURITY_KMS_MASTER_KEY=ENC:your_encrypted_kms_master_key_here
QCAT_SECURITY_ENCRYPTION_MASTER_KEY=ENC:your_encrypted_encryption_master_key_here

# Encryption Key (used to encrypt/decrypt sensitive values)
QCAT_ENCRYPTION_KEY=your_encryption_key_here

# Exchange API Keys (encrypted)
QCAT_BINANCE_API_KEY=ENC:your_encrypted_binance_api_key_here
QCAT_BINANCE_SECRET_KEY=ENC:your_encrypted_binance_secret_key_here

# Monitoring Configuration
QCAT_MONITORING_PROMETHEUS_ENABLED=true
QCAT_MONITORING_PROMETHEUS_PATH=/metrics

# Rate Limiting
QCAT_RATE_LIMIT_ENABLED=true
QCAT_RATE_LIMIT_REQUESTS_PER_MINUTE=100
QCAT_RATE_LIMIT_BURST=20

# Memory Management
QCAT_MEMORY_MONITOR_INTERVAL=30s
QCAT_MEMORY_HIGH_WATER_MARK_PERCENT=80.0
QCAT_MEMORY_LOW_WATER_MARK_PERCENT=60.0
QCAT_MEMORY_ALERT_THRESHOLD=90.0
QCAT_MEMORY_ENABLE_AUTO_GC=true
QCAT_MEMORY_GC_INTERVAL=5m
QCAT_MEMORY_FORCE_GC_THRESHOLD=95.0
QCAT_MEMORY_MAX_MEMORY_MB=1024
QCAT_MEMORY_MAX_HEAP_MB=512

# Network Reconnection
QCAT_NETWORK_MAX_RETRIES=10
QCAT_NETWORK_INITIAL_DELAY=1s
QCAT_NETWORK_MAX_DELAY=5m
QCAT_NETWORK_BACKOFF_MULTIPLIER=2.0
QCAT_NETWORK_JITTER_FACTOR=0.1
QCAT_NETWORK_HEALTH_CHECK_INTERVAL=30s
QCAT_NETWORK_CONNECTION_TIMEOUT=30s
QCAT_NETWORK_PING_INTERVAL=30s
QCAT_NETWORK_PONG_TIMEOUT=10s
QCAT_NETWORK_MAX_CONSECUTIVE_FAILURES=5
QCAT_NETWORK_ALERT_THRESHOLD=3

# Health Check
QCAT_HEALTH_CHECK_INTERVAL=30s
QCAT_HEALTH_TIMEOUT=10s
QCAT_HEALTH_RETRY_COUNT=3
QCAT_HEALTH_RETRY_INTERVAL=5s
QCAT_HEALTH_DEGRADED_THRESHOLD=0.8
QCAT_HEALTH_UNHEALTHY_THRESHOLD=0.5
QCAT_HEALTH_ALERT_THRESHOLD=3
QCAT_HEALTH_ALERT_COOLDOWN=5m

# Graceful Shutdown
QCAT_SHUTDOWN_SHUTDOWN_TIMEOUT=30s
QCAT_SHUTDOWN_COMPONENT_TIMEOUT=10s
QCAT_SHUTDOWN_SIGNAL_TIMEOUT=5s
QCAT_SHUTDOWN_ENABLE_SIGNAL_HANDLING=true
QCAT_SHUTDOWN_FORCE_SHUTDOWN_AFTER=60s
QCAT_SHUTDOWN_LOG_SHUTDOWN_PROGRESS=true

# Logging Configuration
QCAT_LOGGING_LEVEL=info
QCAT_LOGGING_FORMAT=json
QCAT_LOGGING_OUTPUT=stdout

# CORS Configuration
QCAT_CORS_ALLOWED_ORIGINS=["*"]
QCAT_CORS_ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
QCAT_CORS_ALLOWED_HEADERS=["*"]
QCAT_CORS_ALLOW_CREDENTIALS=true
